<h1>Detalhes da Palestra</h1>

<div class="card">
  <div class="card-body">
    <h3 class="card-title">Descrição</h3>
    <p class="card-text"><%= @speech.description %></p>

    <h3 class="card-title">Data</h3>
    <p class="card-text"><%= @speech.time.strftime("%Y-%m-%d") %></p>

    <h3 class="card-title">Hora</h3>
    <p class="card-text"><%= @speech.hour %></p>
    <% if @speech.upload.attached? %>
    <p> <%= link_to 'Baixar Arquivo', rails_blob_path(@speech.upload, disposition: 'attachment'), class: "btn btn-success"%></p>
    <% end %>

    <%= link_to "Voltar à Lista", speeches_path, class: "btn btn-secondary" %>
  </div>
</div>
